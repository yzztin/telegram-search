{
  "name": "@tg-search/db",
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx src/migrate/index.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@tg-search/common": "workspace:*",
    "@tg-search/pg-vector": "workspace:*",
    "drizzle-kit": "^0.30.4",
    "drizzle-orm": "^0.39.3",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "tsx": "^4.19.2",
    "unbuild": "^3.3.1",
    "vitest": "^3.0.5"
  }
}
