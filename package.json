{
  "name": "telegram-search",
  "type": "module",
  "version": "1.0.0-beta.6",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "packages:build": "pnpm -rF=\"./packages/*\" build",
    "packages:stub": "pnpm -rF=\"./packages/*\" stub",
    "build:server": "pnpm -F @tg-search/server build",
    "dev:server": "pnpm run packages:build && pnpm -F @tg-search/server dev",
    "dev:frontend": "pnpm run build:server && pnpm -F @tg-search/frontend dev",
    "dev:electron": "pnpm -F @tg-search/electron dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r --parallel typecheck",
    "bump": "bumpp",
    "bump:deps": "taze -I -f -w -r",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/db.ts migrate",
    "db:push": "tsx scripts/db.ts push",
    "db:kit": "tsx scripts/db.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@types/node": "^22.15.21",
    "bumpp": "^10.1.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.27.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.0.0",
    "taze": "^19.1.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
