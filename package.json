{
  "name": "telegram-search",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "dev:cli": "pnpm -F @tg-search/cli dev",
    "dev:server": "pnpm -F @tg-search/server serve",
    "dev:frontend": "pnpm -F @tg-search/frontend dev",
    "dev": "pnpm run dev:server & pnpm run dev:frontend",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:clean": "docker compose down -v",
    "db:generate": "pnpm -F @tg-search/db db:generate",
    "db:migrate": "pnpm -F @tg-search/db db:migrate",
    "db:push": "pnpm -F @tg-search/db db:push",
    "test": "pnpm -r test run",
    "test:coverage": "pnpm -r test:coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "eslint": "^9.20.1",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ]
  }
}
