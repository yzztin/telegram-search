{
  "name": "telegram-search",
  "type": "module",
  "version": "1.0.0-beta.11",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "packages:build": "pnpm -rF=\"./packages/*\" build",
    "build:server": "pnpm -F @tg-search/server build",
    "dev:server": "pnpm run packages:build && pnpm -F @tg-search/server dev",
    "dev:frontend": "pnpm run build:server && pnpm -F @tg-search/frontend dev",
    "dev:electron": "pnpm run build:server && pnpm -F @tg-search/electron dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r --parallel typecheck",
    "bump": "bumpp",
    "bump:deps": "taze -I -f -w -r",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/db.ts migrate",
    "db:push": "tsx scripts/db.ts push",
    "db:kit": "tsx scripts/db.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@types/node": "^24.0.3",
    "bumpp": "^10.2.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "taze": "^19.1.0",
    "tsdown": "^0.12.8",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "unocss": "^66.2.3",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.2.4"
  }
}
